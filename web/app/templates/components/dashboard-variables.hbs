<div class="col-md-6">
  <div class='box box-primary'>
    <div class="box-header with-border">
      <h3 class="box-title">Variables</h3>
    </div>

    <form>
      <div class="box-body">
        {{#each vars as |v|}}
          <div class='field-{{ v.type }} form-group'>
            <label form='{{ v.name }}'>{{ v.name }}</label>
            <div class='input-group'>
              <input type='text' name='{{ v.name }}' value='{{ v.value }}' class="form-control" />
              <span class='input-group-btn'>
                <a {{action "confirm" v}} class='btn btn-default'>
                  <i class="fa fa-save"></i>
                </a>
              </span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class='box-footer'>
        <button class='btn btn-primary' {{action "confirmAll"}}> Save All </button>
      </div>
    </form>
  </div>
</div>